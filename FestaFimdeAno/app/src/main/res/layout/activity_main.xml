<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/background"
    tools:context="br.com.andersonaltissimo.festafimdeano.views.MainActivity">

    <TextView
        android:id="@+id/lbl_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hoje"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/txt_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hoje"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/lbl_today"
        android:textSize="25sp"
        tools:text="01/01/2017"
        android:textColor="@color/colorPrimaryText"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/lbl_today"
        android:layout_marginTop="10dp"
        android:background="@color/colorDivider"/>

    <TextView
        android:id="@+id/lbl_daysLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_today"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="@string/dias_restante_para_o_fim_do_ano"/>

    <TextView
        android:id="@+id/txt_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_daysLeft"
        android:text="325 dias"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:padding="20dp"
        android:text="Sim / Não / Não Confirmado"
        android:textColor="@color/btnText"
        android:background="@drawable/round_corner_btn"/>

</RelativeLayout>